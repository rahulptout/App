<h1>New User</h1>

<%= form_with model: @homes do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @users.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
       <% end %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_area :email %>
    <% @users.errors.full_messages_for(:email).each do |message| %>
     <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
