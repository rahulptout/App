<h1>New User</h1>

<%= form_with model: @Person do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @people.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_area :email %>
    <% @people.errors.full_messages_for(:email).each do |message| %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
